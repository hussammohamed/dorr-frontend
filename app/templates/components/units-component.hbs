

{{#unless property.isRenter}}
  <div class="layout-row u-md-padding-top-bottom"> <span class="flex"></span><button onclick={{action "addUnit"}}  id="loginBtn" class="mdl-button u-margin-8 u-padding-side-60 mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored">
                أضف وحدة
            </button></div>
  {{/unless}}
   <div class="table-card">
  {{#paper-card class="" as  |card|}}
    <div class="header-overlay"></div>
    <div class="card-shadow"></div>
{{#paper-data-table class="u-custom-table u-custome-menu"   as |table|}}
{{#table.head as |head|}}
  {{#head.column }}رقم{{/head.column}}
  {{#head.column }}النوع{{/head.column}}
  {{#head.column }}الحالة{{/head.column}}
  {{#head.column }}المستأجر{{/head.column}}
  {{#head.column}}حالة التحصيل{{/head.column}}
  {{#head.column numeric=true}}{{/head.column}}

{{/table.head}}
{{#table.body as |body|}}
  {{#each units as |unit|}}
    {{#body.row edit=true onClick=(action 'unitView' unit.id) as |row|}}
      {{#row.cell }}{{unit.no}}{{/row.cell}}
      {{#row.cell}}{{unit.type.name}}{{/row.cell}}
      {{#row.cell }}{{#if (eq unit.available 1)}}
       <span class="warn-col">شاغرة</span>
      
      {{else}}
      <span class="primery-col">مؤجرة</span>
      {{/if}}{{/row.cell}}
      {{#row.cell }}ــــــــ{{/row.cell}}
      {{#row.cell numeric=true}}ــــــــ{{/row.cell}}
     {{#unless property.isRenter}}
      {{#row.cell edit=true as |cell|}}
         {{#paper-menu  offset="237 23" as |menu|}} 
         {{#menu.trigger}} 
         {{#paper-button iconButton=true}} {{paper-icon "more_vert" size=18 class="md-menu-origin"}} {{/paper-button}} 
        {{/menu.trigger}} 
        {{#menu.content class="u-custome-menu" width=4 as |content|}} {{#content.menu-item
        onClick=(action "rentAction" unit.id)}} {{paper-icon "label" size=18 class="md-menu-align-target"}}
        <span>عرض للأيجار</span>
        {{/content.menu-item}}
        {{#content.menu-item
        onClick=(action "editUnit" unit.id)}} {{paper-icon "edit" size=18 class="md-menu-align-target"}}
        <span>تعديل</span>
        {{/content.menu-item}}
         {{#content.menu-item
        onClick=(action "copyUnit" unit.id)}} {{paper-icon "file_copy" size=18 class="md-menu-align-target"}}
        <span>نسخ</span>
        {{/content.menu-item}}
        {{#content.menu-item
        onClick=(action "deleteUnit" unit.id)}} {{paper-icon "delete" size=18 class="md-menu-align-target"}}
        <span>حذف</span>
        {{/content.menu-item}}
       
        
         {{/menu.content}} {{/paper-menu}}
      {{/row.cell}}
      {{else}}
       {{#row.cell }}{{/row.cell}}
      {{/unless}}
    {{/body.row}}
     
    {{else}}
 
    {{#body.row  as |row|}}
     {{#row.cell colspan="6"}}لا يوجد وحدات برجاء إضف وحدة{{/row.cell}}
     {{/body.row}}
  {{/each}}
{{/table.body}}
{{/paper-data-table}}
  {{/paper-card}}
  </div>



