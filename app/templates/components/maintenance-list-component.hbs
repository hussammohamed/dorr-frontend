

{{#paper-data-table class="u-custom-table u-custome-menu"   as |table|}}
{{#table.head as |head|}}
  {{#head.column }}نوع الطلب{{/head.column}}
  {{#head.column }}العقار{{/head.column}}
  {{#head.column }}رقم الوحدة{{/head.column}}
  {{#head.column }}الحالة{{/head.column}}
  {{#if (eq status "history")}}
  {{#head.column }}القيمة المدفوعة{{/head.column}}
  {{/if}}
  {{#head.column numeric=true}}{{/head.column}}

{{/table.head}}
{{#table.body as |body|}}
  {{#each (filter (action "statusFilter") requests) as |request|}}
    {{#body.row edit=true onClick=(action (if (eq request.status 0) 'editRequst' 'requestView') request.id) as |row|}}
      {{#row.cell }}{{request.service_type.name}}{{/row.cell}}
      {{#row.cell}}{{property.name}}{{/row.cell}}
      {{#row.cell }}{{request.unit_id.no}}{{/row.cell}}
      {{#row.cell numeric=true}}{{#if request.owner_response.name}}
        {{request.owner_response.name}}
        {{else}}
        تحت الطلب
        {{/if}}
      {{/row.cell}}
       {{#if (eq status "history")}}
       {{#if (and request.matrials_price request.laborer_pay) }}
        {{#row.cell numeric=true}}{{inc request.matrials_price request.laborer_pay}}{{/row.cell}}
        {{else}}
        {{#row.cell numeric=true}}_____{{/row.cell}}
        {{/if}}
        {{/if}}
      {{#row.cell edit=true as |cell|}}
         {{#paper-menu  offset="237 23" as |menu|}} 
         {{#menu.trigger}} 
         {{#paper-button iconButton=true}} {{paper-icon "more_vert" size=18 class="md-menu-origin"}} {{/paper-button}} 
        {{/menu.trigger}} 
        {{#menu.content class="u-custome-menu" width=4 as |content|}} 
        {{#content.menu-item
        onClick=(action "editRequst" request.id)}} {{paper-icon "edit" size=18 class="md-menu-align-target"}}
        <span>تعديل</span>
        {{/content.menu-item}}
        {{#content.menu-item
        onClick=(action "deleteRequst" request.id)}} {{paper-icon "delete" size=18 class="md-menu-align-target"}}
        <span>حذف</span>
        {{/content.menu-item}}
        
         {{/menu.content}} {{/paper-menu}}
      {{/row.cell}}
    {{/body.row}}
     
    {{else}}
 
    {{#body.row  as |row|}}
     {{#row.cell colspan="6"}}لا يوجد طلبات برجاء إضف طلب{{/row.cell}}
     {{/body.row}}
  {{/each}}
{{/table.body}}
{{/paper-data-table}}